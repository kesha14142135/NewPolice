<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_authorisation</item>
        <item name="android:layout_margin">@dimen/edit_text_margin</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/edit_text_margin</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_margin</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin</item>
    </style>

    <style name="EditTextTheme" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_authorization_height</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_left</item>
    </style>
</resources>
